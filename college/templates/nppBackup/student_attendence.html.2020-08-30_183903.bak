<!doctype html>
<html lang="en">
  <head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
	<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <title>Attendence</title>
	<style>
        body {
            background-color: #f5f5f5;
        }
		table{
			background-color:#ffffff;
			border: 1px solid black;
			margin-top:2%;
			margin-bottom:2%;
			text-align:center;
		}
		th{
			height:20%;
			width:30%;
			text-align:center;
			border: 1px solid black;
		}
		td{
			
			font-size:auto%;
			text-align:center;
			padding-top:1%;
			padding-bottom:1%;
			border: 1px solid black;
		}
		input{
			width:35%;
			height:100%
			text-transform:uppercase;
			text-align:center;
		}
		</style>
  </head>
  <body>
  <div class="container" style="width:auto">
	<div class="row" style="background-color:#1c1c1c;height:75px;">
		<div class="col-xs-4 col-md-4 col-sm-1">
			<a href="/https://technonjr.org/">
				<img src="/static/logo.png" alt="Techno India NJR" style="width:340px;height:65px;margin-top:5px;">
			</a>
		</div>
		<div class="col-xs-4 col-md-4 col-sm-1">
			<center>
			<div style="margin-top:15px;">
				<a href="/studentattendence">
					<span style="color:white;font-size:30px;">Student Portal</span>
				</a>
			</div>
			</center>
		</div>
		<div class="col-xs-4 col-md-4 col-sm-1">
			<center>
			<div style="margin-top:25px;text-align:right;">
				<a href="/studentattendence">
					<span style="color:white;">{{username}}</span>
				</a>
			</div>
			</center>
		</div>
	</div>
	<div class="row">
		<center>
			<label style = "font-size:180%;font-weight:6;margin-top:5%;"> Attendence Report : </label>
		</center>
	</div>
	<div class="row">
		<div class="col-xs-12 col-md-12 col-sm-12">
		<center>
		<form method="post" action="/attendencetaken">{% csrf_token %}
		<table>
			<tr>
				<th style="text-align:center;">Subjects</th>
				<th style="text-align:center;">Attendence (%)</th>
			</tr>
			{% for subject,percentage in attendences.items %}
			<tr>
				<td>{{subject | upper}}</td>
				<td>{{percentage}}</td>
			</tr>
			{%endfor%}
		</table>
		</form>
		<center>
		</div>
	</div>
	<div class="row">
		<center>
		<a href="/studentdownload" >
		<button style="background:#34ff30;width:25%;margin-top:2%;margin-bottom:10px;border-radius:10px;" type="submit" >
			<span style="color:white;font-size:150%;font-family:arial;font-style:bold;">Download Full Attendence</span>
		</button>
		</a>
		</center>
	</div>
  </div>
  </body>
</html>